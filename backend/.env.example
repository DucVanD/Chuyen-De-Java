# =========================
# DATABASE (MySQL - Laragon)
# =========================

# JDBC URL kết nối MySQL
# - localhost: chạy local
# - 3306: port mặc định MySQL
# - chuyendejava: tên database
# - useSSL=false: tránh lỗi SSL
# - serverTimezone=UTC: tránh warning timezone
DB_URL=jdbc:mysql://localhost:3306/chuyendejava?useSSL=false&serverTimezone=UTC

# Username MySQL (Laragon mặc định)
DB_USERNAME=root

# Password MySQL
# Laragon thường để rỗng → KHÔNG ghi gì phía sau dấu =
DB_PASSWORD=


# =========================
# MAIL (SMTP - Gmail)
# =========================

# Email gửi mail (Gmail)
MAIL_USERNAME=your_email@gmail.com

# App Password (KHÔNG phải mật khẩu Gmail)
# Lấy tại: Google Account → Security → App Passwords
MAIL_PASSWORD=xxxx xxxx xxxx xxxx


# =========================
# GEMINI AI
# =========================

# API Key Gemini (Google AI Studio)
# https://aistudio.google.com/app/apikey
GEMINI_API_KEY=AIzaSyXXXXXXXXXXXXXXX


# =========================
# VNPAY
# =========================

# Mã Website (do VNPAY cấp)
VNPAY_TMN_CODE=XXXXXXXX

# Chuỗi bí mật ký request
